    {
      "parameters": {
        "jsCode": "// Obtener la última fila del Sheets\nconst items = $input.all();\n\nif (!items || items.length === 0) {\n  throw new Error('No hay traducciones guardadas');\n}\n\n// Tomar la última fila directamente (la más reciente)\nconst lastRow = items[items.length - 1].json;\n\n// Obtener el email y asunto del nodo Analyze Request\nconst analyzeData = $('Analyze Request').first().json;\nconst toEmail = analyzeData.toEmail || 'destinatario@example.com';\nconst customSubject = analyzeData.customSubject;\n\n// Intentar leer los datos usando diferentes posibles nombres (incluyendo MAYÚSCULAS)\nconst originalText = lastRow['Texto Original'] || lastRow['TEXTO ORIGINAL'] || lastRow.B || lastRow['B'] || '';\nconst translation = lastRow['Traducción'] || lastRow['Traduccion'] || lastRow['TRADUCCION'] || lastRow.C || lastRow['C'] || '';\nconst targetLang = lastRow['Idioma Destino'] || lastRow['IDIOMA DESTINO'] || lastRow.D || lastRow['D'] || '';\nconst timestamp = lastRow['Fecha'] || lastRow['FECHA'] || lastRow.A || lastRow['A'] || '';\nconst model = lastRow['Modelo'] || lastRow['MODELO'] || lastRow.E || lastRow['E'] || '';\n\n// Generar saludo por defecto según idioma destino si no hay asunto personalizado\nconst greetings = {\n  'inglés': 'Hello!',\n  'ingles': 'Hello!',\n  'english': 'Hello!',\n  'español': '¡Hola!',\n  'espanol': '¡Hola!',\n  'spanish': '¡Hola!',\n  'francés': 'Bonjour!',\n  'frances': 'Bonjour!',\n  'french': 'Bonjour!',\n  'alemán': 'Guten Tag!',\n  'aleman': 'Guten Tag!',\n  'german': 'Guten Tag!',\n  'portugués': 'Olá!',\n  'portugues': 'Olá!',\n  'portuguese': 'Olá!',\n  'italiano': 'Ciao!',\n  'italian': 'Ciao!',\n  'chino': '你好!',\n  'chinese': '你好!',\n  'japonés': 'こんにちは!',\n  'japones': 'こんにちは!',\n  'japanese': 'こんにちは!'\n};\n\nconst defaultGreeting = greetings[targetLang.toLowerCase()] || 'Hello!';\nconst subject = customSubject || defaultGreeting;\n\nreturn {\n  json: {\n    originalText: originalText,\n    translation: translation,\n    targetLang: targetLang,\n    timestamp: timestamp,\n    model: model,\n    toEmail: toEmail,\n    subject: subject\n  },\n  pairedItem: items[items.length - 1].pairedItem\n};"
      },
